$time-slider = .4s

//Slide standard
.swiper-slide
  text-align center
  transition .3s
.swiper-slide img

//Slider Activo//
.swiper-slide.swiper-slide-active
  transition .3s
.swiper-slide.swiper-slide-active img
  height 22vw
  transition $time-slider
  background-color: yellow //cambiar color por imagen de fondo
  transform: translateY(55%)


//Slide Siguiente y Slide Anterior
.swiper-slide.swiper-slide-next img,.swiper-slide.swiper-slide-prev img,.swiper-slide img
  height 18vw
  transition $time-slider
  transform: translateY(55%)

//wrapper general
.slider-bottles-wrapper
  width 100%
  height auto
  position relative

.swiper-container
  height 40vw
  width 65%
  margin: 0 auto;

//titulo slider
.slider-title
  text-align center
  position absolute
  width 100%
  left 0
  top 5%

//Flechas
.swiper-button-next
  background-image: url(./../src/images/sicon-02.png);
.swiper-button-prev
  background-image: url(./../src/images/sicon-01.png);

@media(max-width:768px)
  .swiper-container
    height 90vw
    width 75%
  .swiper-slide img, .swiper-slide.swiper-slide-next img, .swiper-slide.swiper-slide-prev img,.swiper-slide.swiper-slide-active img
    height 35vw
    transform translateY(80%)

@media(max-width:640px)
  .swiper-container
    height 100vw
  .swiper-slide img, .swiper-slide.swiper-slide-next img, .swiper-slide.swiper-slide-prev img,.swiper-slide.swiper-slide-active img
    height 45vw
    transform translateY(65%)

@media(max-width:480px)
  .swiper-container
    height 100vw
  .swiper-slide img, .swiper-slide.swiper-slide-next img, .swiper-slide.swiper-slide-prev img,.swiper-slide.swiper-slide-active img
    height 55vw
    transform translateY(45%)
